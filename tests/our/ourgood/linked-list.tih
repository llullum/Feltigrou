type node = {value : int, next : node}
function append(list: node, element: int) =
    let
        var cur := list
        var newnode := node {value = element, next = nil}
    in
        while (cur.next <> nil) do
        (
            cur := cur.next
        );
        cur.next := newnode
    end
function display(list: node) =
    let
        var cur := list
    in
        while (cur.next <> nil) do
        (
            print_int(cur.value);
            print(" -> ");
            cur := cur.next
        );
        print_int(cur.value)
    end

