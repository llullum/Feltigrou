type int_array = array of int
function sort (tab : int_array, size : int) =
    if (size > 0) then
        for i := 1 to (size-1) do
        (
            let
                var j := i
                var tmp := 0
            in
                while ((j > 0) & (tab[j-1] > tab[j])) do
                (
                    tmp := tab[j-1];
                    tab[j-1] := tab[j];
                    tab[j] := tmp;
                    j := j-1
                )
            end
        )
