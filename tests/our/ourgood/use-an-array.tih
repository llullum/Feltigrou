type int_array = array of int
function max_search (tab : int_array, size : int) : int =
    if size <= 0 then
        -1
    else
        let
            var index := 0
        in
            for i := 1 to (size-1) do
            (
                if (tab[i] > tab[index]) then
                    index := i
            );
            index
        end
