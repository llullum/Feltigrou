function fibo (n : int) : int =
    if n < 0 then
        -1
    else
        if n = 0 then
            0
        else
            let
                var a := 0
                var b := 1
                var c := a + b
            in
                for i := 2 to (n-1) do
                (
                    a := b;
                    b := c;
                    c := a + b
                );
                c
            end
